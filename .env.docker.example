# Docker Environment Variables
# Copy this file to .env.docker and update the values

# Database Configuration
MYSQL_DATABASE=nugui_website
MYSQL_ROOT_PASSWORD=your_secure_mysql_password_here

# Application Configuration
app.baseURL=https://www.nugui.co.za/
app.forceGlobalSecureRequests=false

# Database Connection
database.default.hostname=db
database.default.username=root
database.default.password=your_secure_mysql_password_here
database.default.database=nugui_website
database.default.port=3306

# Email Configuration (optional)
email.fromEmail=noreply@yourdomain.com
email.fromName=NU GUI Website


#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = development

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'https://nugui.co.za/'
app.forceGlobalSecureRequests = true

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = your_database_name
database.default.username = your_database_user
database.default.password = your_database_password
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# Uncomment if encryption is needed
# encryption.key = base64:your_encryption_key_here

# reCAPTCHA Secret Key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Email Configuration
SMTP_HOST=mail.nugui.co.za
SMTP_PORT=465
SMTP_CRYPTO=ssl
CONTACT_EMAIL_USER=info@nugui.co.za
CONTACT_EMAIL_PASS=your_contact_email_password
SUPPORT_EMAIL_USER=support@nugui.co.za
SUPPORT_EMAIL_PASS=your_support_email_password


#--------------------------------------------------------------------
# Production Environment Configuration file
#--------------------------------------------------------------------

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=nugui_website_prod

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'https://nugui.co.za/'
app.forceGlobalSecureRequests = true
app.CSPEnabled = true

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

# Production database settings - update with actual production values
database.default.hostname = localhost
database.default.database = nugui_website_prod
database.default.username = nugui_prod_user
database.default.password = CHANGE_ME_SECURE_PASSWORD
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

encryption.key = hex2bin:CHANGE_ME_GENERATE_NEW_KEY_FOR_PRODUCTION

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = 'CodeIgniter\Session\Handlers\DatabaseHandler'
session.savePath = 'ci_sessions'

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 1

#--------------------------------------------------------------------
# EMAIL CONFIGURATION
#--------------------------------------------------------------------

# Contact Form Email Settings - Production SMTP
CONTACT_EMAIL_HOST = smtp.nugui.co.za
CONTACT_EMAIL_PORT = 587
CONTACT_EMAIL_USER = info@nugui.co.za
CONTACT_EMAIL_PASS = CHANGE_ME_SECURE_EMAIL_PASSWORD
CONTACT_EMAIL_CRYPTO = tls

# Support Form Email Settings - Production SMTP
SUPPORT_EMAIL_HOST = smtp.nugui.co.za
SUPPORT_EMAIL_PORT = 587
SUPPORT_EMAIL_USER = support@nugui.co.za
SUPPORT_EMAIL_PASS = CHANGE_ME_SECURE_EMAIL_PASSWORD
SUPPORT_EMAIL_CRYPTO = tls

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# Enable security headers
security.csrfProtection = 'cookie'
security.tokenRandomize = true
security.tokenName = 'csrf_nugui_token'
security.headerName = 'X-CSRF-TOKEN'
security.cookieName = 'csrf_cookie_nugui'
security.expires = 7200
security.regenerate = true
security.redirect = true
security.sameSite = 'Lax'

#--------------------------------------------------------------------
# ANALYTICS
#--------------------------------------------------------------------

GA_MEASUREMENT_ID = G-XXXXXXXXXX
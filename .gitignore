# CodeIgniter4 .gitignore

# Vendor directory (Composer dependencies)
/vendor/

# Environment files
/.env
/.env.*
!/.env.example
!/.env.docker.example
.env.docker

# Database configuration with credentials
app/Config/Database.php.backup

# Cache and logs
/writable/cache/*
!/writable/cache/index.html
/writable/logs/*
!/writable/logs/index.html
/writable/session/*
!/writable/session/index.html
/writable/uploads/*
!/writable/uploads/index.html

# System files
.DS_Store
Thumbs.db

# IDE files
.vscode/
.idea/
*.swp
*.swo
*~

# Build files
/builds/
/dist/

# Temporary files
*.tmp
*.temp
/info.php
/phpinfo.php
/php.ini.bak

# Node modules (if using npm/yarn)
node_modules/

# Deployment temporary files
deployment-temp/

# Backup directories

# Composer
composer.phar

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
vendor/
# CodeIgniter Debug Toolbar cache files
writable/debugbar/
!writable/debugbar/.gitkeep
